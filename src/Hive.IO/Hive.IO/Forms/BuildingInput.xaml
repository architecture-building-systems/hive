<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="hizard | Building"
    x:Class="Hive.IO.Forms.BuildingInput"
    Width="586.228" Height="287.924" WindowStyle="None">
    <Window.Resources>
        <Style x:Key="hizardPanel" TargetType="TabPanel">
            <Setter Property="Background" Value="Black"></Setter>
            <Setter Property="HorizontalAlignment" Value="Right"></Setter>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"></Setter>
        </Style>
        <Style x:Key="hizardTabControl" TargetType="TabControl">
            <Setter Property="OverridesDefaultStyle" Value="True"></Setter>
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Background="Black" Foreground="White" FontWeight="Bold" Margin="-4,-4,-4,-4">hizard | Building</TextBlock>
                            <TabPanel Name="HeaderPanel"
                                      Grid.Row="0"
                                      Grid.Column="1"
                                      Panel.ZIndex="1" 
                                      Margin="1,0,4,-1" 
                                      IsItemsHost="True"
                                      KeyboardNavigation.TabIndex="1"
                                      HorizontalAlignment="Right"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <TabControl Style="{StaticResource hizardTabControl}">
            <TabItem Header="SIA">text</TabItem>
                <TabItem Header="ENV">more text</TabItem>
                <TabItem Header="IG">much more text</TabItem>
                <TabItem Header="VEN">when is this ever going to stop?</TabItem>
                <TabItem Header="X" MouseUp="ButtonX_OnClick">
                    you shouldn't be seeing this...
                </TabItem>
        </TabControl>
</Window>