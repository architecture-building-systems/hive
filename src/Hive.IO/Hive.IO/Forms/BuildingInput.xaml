<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="hizard | Building"
    x:Class="Hive.IO.Forms.BuildingInput"
    Width="586.228" Height="287.924" WindowStyle="None">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <Style x:Key="TitleBarButtonStyle" TargetType="Button"></Style>
    </Window.Resources>
    <StackPanel>
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50,0,0,0" Foreground="White" FontWeight="Bold">hizard | Building</TextBlock>
        <Button Grid.Column="1">SIA</Button>
        <Button Grid.Column="2">ENV</Button>
        <Button Grid.Column="3">IG</Button>
        <Button Grid.Column="4">VEN</Button>
        <Button Grid.Column="5" Style="{StaticResource TitleBarButtonStyle}">X</Button>
    </Grid>
        <TabControl>
        <TabItem Header="SIA">text</TabItem>
        <TabItem Header="ENV">more text</TabItem>
        <TabItem Header="IG">much more text</TabItem>
        <TabItem Header="VEN">when is this ever going to stop?</TabItem>
        <TabItem Header="X"><Button Name="button" Click="button_Click"></Button></TabItem>
    </TabControl>
    </StackPanel>
</Window>